    "eslint-plugin-react-refresh": "0.4.19",
    "eslint-plugin-tailwindcss": "3.18.0",
    "globals": "^16.0.0",
    "jsdom": "26.0.0",
    "postcss": "8.5.3",
    "prettier": "3.5.3",
    "react-test-renderer": "19.1.0",
    "tailwindcss": "4.1.3",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.29.1",
