    "@marigold/theme-core": "28.3.0",
    "@marigold/theme-docs": "^2.4.5",
    "@marigold/theme-plugins": "^1.0.1",
    "@mdx-js/rollup": "3.1.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "4.1.3",
    "@tanstack/react-query": "5.72.0",
    "@tanstack/react-query-devtools": "5.72.0",
    "@tanstack/react-router": "1.115.2",
    "@vercel/analytics": "^1.5.0",
    "codehike": "^1.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "3.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@marigold/eslint-config": "1.0.0",
    "@marigold/prettier-config": "0.3.1",
    "@tailwindcss/postcss": "4.1.3",
    "@tanstack/router-devtools": "1.115.2",
    "@tanstack/router-vite-plugin": "1.115.2",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.14.0",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "@types/react-test-renderer": "19.1.0",
