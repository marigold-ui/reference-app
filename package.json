{
  "name": "reference-app",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ignore-pattern node_modules --ignore-pattern dist --ignore-pattern packages/types/src/index.ts --ignore-pattern \".cache\" --ignore-pattern public",
    "lint:fix": "pnpm lint --fix",
    "preview": "vite preview",
    "format": "prettier --write \"**/*\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --config vite.config.ts",
    "test:ci": "vitest run --config vite.config.ts --coverage"
  },
  "packageManager": "pnpm@8.15.6",
  "dependencies": {
    "@code-hike/mdx": "^0.9.0",
    "@marigold/components": "^7.6.0",
    "@marigold/theme-core": "^26.1.5",
    "@mdx-js/rollup": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@marigold/eslint-config": "^0.4.14",
    "@marigold/prettier-config": "^0.3.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.1",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.77",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/coverage-v8": "^1.5.0",
    "autoprefixer": "^10.4.19",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-tailwindcss": "^3.15.1",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.0",
    "vitest": "^1.5.0"
  }
}
